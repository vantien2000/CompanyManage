<% content_for :login do %>
<div class="login-container m-0">
  <div class="header text-center w-100">MANAGEMENT</div>
  <div class="login-wrapper col-lg-4 col-sm-8 d-flex justify-content-center align-items-center">
  <%= form_with url: "/login", id: "form-login" , class: "col-lg-10 col-sm-12" do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", value: params[:email] || '' %>
      <div class="error"><%= flash[:email] ? flash[:email][0] : '' %></div>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", value: params[:password] || '' %>
      <div class="error"><%= flash[:password] ? flash[:password][1] : '' %></div>
    </div>
    <div class="btn-login-form">
      <%= form.submit class: "btn btn-success btn-login", value: "Login"%>
      <a href="" class="btn btn-info btn-sign-up">Sign up</a>
    </div>
      <div class="notice"><%= flash[:error] %></div>
  <% end %>
  </div>
</div>
<% end %>